<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/todo_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/todo_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/full_name"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/todo_tech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/todo_title"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/full_name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/todo_do_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/todo_title"
                android:layout_alignParentEnd="true"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="@string/full_name"
                android:textDirection="rtl"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/todo_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/todo_do_date"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/full_name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/todo_post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/todo_desc"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/full_name"
                android:textSize="18sp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</androidx.appcompat.widget.LinearLayoutCompat>