<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/classCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/rel_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/person_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/profile"
                android:src="@drawable/add_student" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@android:dimen/app_icon_size"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">

            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/college_app"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/person_roll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_name"
                android:text="@string/college_app"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/person_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_name"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_toEndOf="@+id/person_roll"
                android:text="@string/college_app"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/person_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_name"
                android:layout_alignParentEnd="true"
                android:text="@string/college_app"
                android:textSize="15sp" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>