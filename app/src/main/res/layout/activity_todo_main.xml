<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/btn_round"
    android:orientation="vertical"
    tools:context=".todo_main">

    <include layout="@layout/tollbar_layout" />

    <RelativeLayout
        android:id="@+id/rel_text"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/toll_bar"
        android:background="@drawable/gradient_background"
        android:padding="20dp">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txt_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/txt_name"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/full_name"
            android:textColor="@color/white"
            android:textSize="22sp" />


        <LinearLayout
            android:layout_marginTop="25dp"
            android:id="@+id/lin_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_class"
            android:background="@drawable/btn_round"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:spinnerMode="dropdown" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_text"
        android:layout_marginTop="-40dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:onClick="open_add"
        android:src="@android:drawable/ic_input_add" />


</RelativeLayout>